extends base2.pug
block content
    //- | - const details = #{record}
    <div class="container">
      <h4 class="text-white mt-2">Online Job Application Form</h4>
      <div style="width:25%;text-align:left;margin-left:0;border: 1px solid #ffc107;">
      </div>
    </div>
    <div class="container sec1 mt-5">
      <h2 class="text-warning text-center">Personal Info</h2>
      <div style="width:100%;text-align:left;margin-left:0;border: 1px solid white;background-color: white;" class="mb-5 mt-3">
      </div>
      <form class="">
        <div class="form-group d-flex align-items-center justify-content-lg-start mt-2">
          <img src="../public/uploads/applicant/photo/#{uploadphoto}"  alt="#{uploadphoto}" width="200px">
        </div>
         

        <div class="form-group d-flex align-items-center justify-content-lg-start mt-2">
          <label for="inputAddress" class="text-warning w-25" >Name</label>
          <label class="text-white w-75"> #{name} </label>
        </div>
        <div class="form-group d-flex align-items-center my-4">
          <label for="inputAddress" class="text-warning w-25">Address</label>
          <label class="text-white w-75">#{address}</label>
        </div>

        <div class="form-group  d-flex align-items-center justify-content-lg-start">
            <label for="inputEmail4" class="text-warning w-25 ">Email</label>
            <label class="text-white w-75">#{email}</label>
        </div>
        <div class="form-group d-flex align-items-center justify-content-lg-start">
            <label for="inputPassword4" class="text-warning w-25">Phone No.</label>
            <label class="text-white w-75">#{phoneno}</label>
        </div>

        <div class="form-group  d-flex align-items-center justify-content-lg-start">
            <label for="inputEmail4" class="text-warning w-25  ">DOB</label>
            <label class="text-white w-75">#{dob}</label>
        </div>
        <div class="form-group d-flex align-items-center justify-content-lg-start ">
            <label for="inputPassword4" class="text-warning w-25">Gender </label>
            <label class="text-white w-75">#{gender}</label>
            
        </div>
        <div class="form-group mb-3 d-flex align-items-center">
            <label for="validationDefault03" class="text-warning w-25">Nationality</label>
            <label class="text-white w-75">#{nationality}</label>
        </div>

    

      <h2 class="text-warning text-center mt-5">Educational Info</h2>
      <div style="width:100%;text-align:left;margin-left:0;border: 1px solid white;background-color: white;" class="mb-5 mt-3">
      </div>
      <div class="form-group d-flex align-items-center justify-content-lg-start mt-2">
        <label for="inputAddress" class="text-warning w-25">Qualifications</label>
        each quali in qualifications 
          <span class="badge badge-light text-black mx-2">#{quali}</span>
          
      </div>
      <div class="form-group d-flex align-items-center justify-content-lg-start my-4">
        <label for="inputAddress" class="text-warning w-25">Job Experience</label>
        <label class="text-white w-75">#{jobexperience}</label>  
      </div>
      <div class="form-group d-flex align-items-center justify-content-lg-start mt-2">
        <label for="inputAddress" class="text-warning w-25">Skills </label>        
        each skill in skills 
          <span class="badge badge-light text-black mx-2">#{skill}</span>


      </div>


      <h2 class="text-warning text-center mt-5">Bio Description</h2>
      <div style="width:100%;text-align:left;margin-left:0;border: 1px solid white;background-color: white;" class="mb-5 mt-3">
      </div>
      <div class="form-group d-flex align-items-center justify-content-lg-start my-4">
        <label for="inputAddress" class="text-warning w-25">Bio-Data</label>
        <label class="text-white w-75">#{biodata}</label>
        
      </div>
      <div class="form-group d-flex align-items-center justify-content-lg-start mt-2">
        <label for="inputAddress" class="text-warning w-25">Github Link</label>
        <label class="text-white w-75">#{githuburl}</label> 
      </div>
    
      <div class="form-group d-flex align-items-center justify-content-lg-start mt-2">
        <label for="inputAddress" class="text-warning w-25">#{uploadresume} Resume</label>
        //- <button class="btn btn-warning w-25 ">Download</button>
        <a href ="../public/uploads/applicant/resume/#{uploadresume}" attributes-list download  class="btn btn-warning w-25 "> Download</a>  
      </div>
      
      <div class="row mt-5 mb-5">
        <button type="submit" class="btn btn-outline-light w-25 m-auto">Select</button>
        <button type="reset" class="btn btn-outline-light w-25 m-auto">Reject</button>
      </div>
      </form>
    </div>
    </div>
    </div>
    </div>



